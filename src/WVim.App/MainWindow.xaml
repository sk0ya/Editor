<Window x:Class="WVim.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WVim.Controls;assembly=WVim.Controls"
        Title="WVIM" Height="700" Width="1100"
        Background="#282A36"
        WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0"
              Background="#1E1E1E"
              Foreground="#DDDDDD"
              BorderBrush="#1E1E1E"
              BorderThickness="0">
            <Menu.Resources>
                <!-- Override default WPF menu border brushes to avoid bright outlines. -->
                <SolidColorBrush x:Key="Menu.Static.Background" Color="#1E1E1E"/>
                <SolidColorBrush x:Key="Menu.Static.Border" Color="#1E1E1E"/>
                <SolidColorBrush x:Key="MenuItem.Static.Background" Color="#1E1E1E"/>
                <SolidColorBrush x:Key="MenuItem.Static.Border" Color="#1E1E1E"/>
                <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#2B2D34"/>
                <SolidColorBrush x:Key="MenuItem.Selected.Border" Color="#2B2D34"/>
                <SolidColorBrush x:Key="MenuItem.Highlight.Background" Color="#3A3D46"/>
                <SolidColorBrush x:Key="MenuItem.Highlight.Border" Color="#3A3D46"/>
                <SolidColorBrush x:Key="MenuItem.Submenu.Background" Color="#1E1E1E"/>
                <SolidColorBrush x:Key="MenuItem.Submenu.Border" Color="#1E1E1E"/>

                <Style TargetType="{x:Type Menu}">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#1E1E1E"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Menu}">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="0"
                                        SnapsToDevicePixels="True">
                                    <ItemsPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="{x:Type ContextMenu}">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#1E1E1E"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                </Style>

                <Style TargetType="{x:Type Separator}">
                    <Setter Property="Background" Value="#2B2D34"/>
                    <Setter Property="BorderBrush" Value="#2B2D34"/>
                </Style>

                <Style TargetType="{x:Type MenuItem}">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="Foreground" Value="#E6E6E6"/>
                    <Setter Property="TextElement.Foreground" Value="#E6E6E6"/>
                    <Setter Property="BorderBrush" Value="#1E1E1E"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" Value="#3A3D46"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Setter Property="TextElement.Foreground" Value="#FFFFFF"/>
                            <Setter Property="BorderBrush" Value="#3A3D46"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#8A8A8A"/>
                            <Setter Property="TextElement.Foreground" Value="#8A8A8A"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>

            <MenuItem Header="_File">
                <MenuItem Header="_New Tab" Click="NewTab_Click" InputGestureText=":tabnew"/>
                <MenuItem Header="_Open..." Click="OpenFile_Click" InputGestureText=":e"/>
                <MenuItem Header="_Save" Click="Save_Click" InputGestureText=":w"/>
                <MenuItem Header="Save _As..." Click="SaveAs_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText=":q"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="Undo_Click" InputGestureText="u"/>
                <MenuItem Header="_Redo" Click="Redo_Click" InputGestureText="Ctrl+r"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Line _Numbers" x:Name="LineNumMenu" IsCheckable="True" IsChecked="True"
                          Click="LineNumbers_Click"/>
                <MenuItem Header="Syntax _Highlighting" x:Name="SyntaxMenu" IsCheckable="True" IsChecked="True"
                          Click="Syntax_Click"/>
                <Separator/>
                <MenuItem Header="Theme: Dracula" Click="ThemeDracula_Click"/>
                <MenuItem Header="Theme: Dark" Click="ThemeDark_Click"/>
            </MenuItem>
        </Menu>

        <!-- Tab bar -->
        <TabControl x:Name="TabCtrl" Grid.Row="1"
                    Background="#1E1E1E" BorderThickness="0"
                    SelectionChanged="TabCtrl_SelectionChanged"
                    Height="30">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="12,4"/>
                    <Setter Property="FontFamily" Value="Cascadia Code, Consolas"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}"
                                        BorderThickness="0">
                                    <ContentPresenter ContentSource="Header"
                                                      TextBlock.Foreground="{TemplateBinding Foreground}"
                                                      TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                                      TextBlock.FontSize="{TemplateBinding FontSize}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#282A36"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>

        <!-- Editor -->
        <controls:VimEditorControl x:Name="Editor" Grid.Row="2"
                                   SaveRequested="Editor_SaveRequested"
                                   QuitRequested="Editor_QuitRequested"
                                   OpenFileRequested="Editor_OpenFileRequested"
                                   NewTabRequested="Editor_NewTabRequested"
                                   SplitRequested="Editor_SplitRequested"
                                   NextTabRequested="Editor_NextTabRequested"
                                   PrevTabRequested="Editor_PrevTabRequested"
                                   CloseTabRequested="Editor_CloseTabRequested"
                                   ModeChanged="Editor_ModeChanged"/>
    </Grid>
</Window>

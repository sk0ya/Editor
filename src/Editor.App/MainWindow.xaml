<Window x:Class="Editor.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Editor.Controls;assembly=Editor.Controls"
        xmlns:local="clr-namespace:Editor.App"
        Title="Editor" Height="700" Width="1100"
        Background="#282A36"
        WindowStyle="None"
        Loaded="Window_Loaded">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.InputBindings>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{x:Null}"
                    CommandParameter="ToggleExplorer"/>
    </Window.InputBindings>

    <Window.Resources>

        <!-- ── Title bar buttons ── -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#3A3D46"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#2A2D36"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleBarCloseButton" TargetType="Button">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#C42B1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#901010"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabCloseButton" TargetType="Button">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Margin" Value="6,0,-2,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="Transparent" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#C42B1C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Settings radio button ── -->
        <Style x:Key="SettingRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Width="14" Height="14"
                                  VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse x:Name="Outer" Stroke="#666666" StrokeThickness="1.5" Fill="Transparent"/>
                                <Ellipse x:Name="Inner" Width="6" Height="6" Fill="#CCCCCC" Visibility="Collapsed"/>
                            </Grid>
                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Inner" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Outer" Property="Stroke" Value="#CCCCCC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Outer" Property="Stroke" Value="#AAAAAA"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Activity Bar toggle button ── -->
        <Style x:Key="ActivityBarButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#858585"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderThickness="2,0,0,0"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter TargetName="Bd" Property="Background" Value="#2A2D36"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── TreeViewItem dark theme ── -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    Padding="2,2,4,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Expand/collapse toggle -->
                                    <ToggleButton x:Name="Expander" Grid.Column="0"
                                                  ClickMode="Press" Focusable="False"
                                                  IsChecked="{Binding IsExpanded,
                                                      RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="Transparent">
                                                                <TextBlock x:Name="Arrow"
                                                                           Text="&#x25B6;"
                                                                           FontSize="7"
                                                                           Foreground="#888888"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="Arrow" Property="Text" Value="&#x25BC;"/>
                                                                    <Setter TargetName="Arrow" Property="Foreground" Value="#AAAAAA"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="Arrow" Property="Foreground" Value="#DDDDDD"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>

                                    <ContentPresenter Grid.Column="1"
                                                      x:Name="PART_Header"
                                                      ContentSource="Header"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="16,0,0,0"/>
                        </StackPanel>

                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A2D36"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#094771"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsSelectionActive" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#3A3D46"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── FileTreeItem data template ── -->
        <HierarchicalDataTemplate DataType="{x:Type local:FileTreeItem}"
                                  ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="0,1">
                <TextBlock Text="{Binding Icon}"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="13"
                           Foreground="{Binding IconBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Name}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </HierarchicalDataTemplate>

    </Window.Resources>

    <Grid x:Name="RootPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ── Title bar ── -->
        <Grid Grid.Row="0" Background="#1E1E1E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Menu Grid.Column="0"
                  WindowChrome.IsHitTestVisibleInChrome="True"
                  Background="#1E1E1E"
                  Foreground="#DDDDDD"
                  BorderBrush="#1E1E1E"
                  BorderThickness="0"
                  VerticalAlignment="Center">
                <Menu.Resources>
                    <SolidColorBrush x:Key="Menu.Static.Background" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="Menu.Static.Border" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="MenuItem.Static.Background" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="MenuItem.Static.Border" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#2B2D34"/>
                    <SolidColorBrush x:Key="MenuItem.Selected.Border" Color="#2B2D34"/>
                    <SolidColorBrush x:Key="MenuItem.Highlight.Background" Color="#3A3D46"/>
                    <SolidColorBrush x:Key="MenuItem.Highlight.Border" Color="#3A3D46"/>
                    <SolidColorBrush x:Key="MenuItem.Submenu.Background" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="MenuItem.Submenu.Border" Color="#1E1E1E"/>

                    <Style TargetType="{x:Type Menu}">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="BorderBrush" Value="#1E1E1E"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Menu}">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="0"
                                            SnapsToDevicePixels="True">
                                        <ItemsPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style TargetType="{x:Type ContextMenu}">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="BorderBrush" Value="#1E1E1E"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                    </Style>

                    <Style TargetType="{x:Type Separator}">
                        <Setter Property="Background" Value="#2B2D34"/>
                        <Setter Property="BorderBrush" Value="#2B2D34"/>
                    </Style>

                    <Style TargetType="{x:Type MenuItem}">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#E6E6E6"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type MenuItem}">
                                    <Border x:Name="templateRoot"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            SnapsToDevicePixels="True">
                                        <Grid>
                                            <!-- Top-level menu bar item header -->
                                            <ContentPresenter x:Name="TopLevelContent"
                                                              ContentSource="Header"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="8,4"
                                                              RecognizesAccessKey="True"
                                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>

                                            <!-- Submenu item layout: icon | text | gesture | arrow -->
                                            <Grid x:Name="SubmenuContent" Visibility="Collapsed">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="26"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="14"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock x:Name="GlyphPanel"
                                                           Grid.Column="0"
                                                           Text="&#x2714;"
                                                           FontSize="10"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"/>

                                                <ContentPresenter Grid.Column="1"
                                                                  ContentSource="Header"
                                                                  VerticalAlignment="Center"
                                                                  Margin="2,4,6,4"
                                                                  RecognizesAccessKey="True"
                                                                  TextBlock.Foreground="{TemplateBinding Foreground}"/>

                                                <TextBlock Grid.Column="2"
                                                           Text="{TemplateBinding InputGestureText}"
                                                           Foreground="#888888"
                                                           VerticalAlignment="Center"
                                                           Margin="0,4,6,4"/>

                                                <TextBlock x:Name="SubArrow"
                                                           Grid.Column="3"
                                                           Text="&#x276F;"
                                                           FontSize="8"
                                                           Foreground="#888888"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="Collapsed"/>
                                            </Grid>

                                            <!-- Popup for submenus -->
                                            <Popup x:Name="PART_Popup"
                                                   AllowsTransparency="True"
                                                   Focusable="False"
                                                   IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                   Placement="Bottom"
                                                   PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}">
                                                <Border Background="#1E1E1E"
                                                        BorderBrush="#3A3D46"
                                                        BorderThickness="1"
                                                        Padding="0,4">
                                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Cycle"
                                                                    KeyboardNavigation.TabNavigation="Cycle"
                                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="Role" Value="SubmenuItem">
                                            <Setter TargetName="TopLevelContent" Property="Visibility" Value="Collapsed"/>
                                            <Setter TargetName="SubmenuContent" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                        <Trigger Property="Role" Value="SubmenuHeader">
                                            <Setter TargetName="TopLevelContent" Property="Visibility" Value="Collapsed"/>
                                            <Setter TargetName="SubmenuContent" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="SubArrow" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="PART_Popup" Property="Placement" Value="Right"/>
                                        </Trigger>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="templateRoot" Property="Background" Value="#3A3D46"/>
                                        </Trigger>
                                        <Trigger Property="IsSubmenuOpen" Value="True">
                                            <Setter TargetName="templateRoot" Property="Background" Value="#3A3D46"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="#8A8A8A"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="GlyphPanel" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Menu.Resources>

                <MenuItem Header="_File">
                    <MenuItem Header="_New Tab" Click="NewTab_Click" InputGestureText=":tabnew"/>
                    <MenuItem Header="_Open File..." Click="OpenFile_Click" InputGestureText=":e"/>
                    <MenuItem Header="Open _Folder..." Click="OpenFolder_Click"/>
                    <Separator/>
                    <MenuItem x:Name="RecentFilesMenu" Header="Recent _Files"/>
                    <MenuItem x:Name="RecentFoldersMenu" Header="Recent Fo_lders"/>
                    <Separator/>
                    <MenuItem Header="_Save" Click="Save_Click" InputGestureText=":w"/>
                    <MenuItem Header="Save _As..." Click="SaveAs_Click"/>
                    <Separator/>
                    <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText=":q"/>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Undo" Click="Undo_Click" InputGestureText="u"/>
                    <MenuItem Header="_Redo" Click="Redo_Click" InputGestureText="Ctrl+r"/>
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Header="_Explorer" Click="ExplorerBtn_Click" InputGestureText="Ctrl+B"/>
                    <Separator/>
                    <MenuItem Header="Line _Numbers" x:Name="LineNumMenu" IsCheckable="True" IsChecked="True"
                              Click="LineNumbers_Click"/>
                    <MenuItem Header="Syntax _Highlighting" x:Name="SyntaxMenu" IsCheckable="True" IsChecked="True"
                              Click="Syntax_Click"/>
                    <Separator/>
                    <MenuItem Header="Theme: Dracula" Click="ThemeDracula_Click"/>
                    <MenuItem Header="Theme: Dark" Click="ThemeDark_Click"/>
                </MenuItem>
            </Menu>

            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Content="1" Style="{StaticResource TitleBarButton}" Click="MinimizeButton_Click"
                        ToolTip="Minimize"/>
                <Button x:Name="MaxRestoreButton" Content="2" Style="{StaticResource TitleBarButton}"
                        Click="MaximizeButton_Click" ToolTip="Maximize"/>
                <Button Content="r" Style="{StaticResource TitleBarCloseButton}" Click="CloseButton_Click"
                        ToolTip="Close"/>
            </StackPanel>
        </Grid>

        <!-- ── Main area: Activity Bar | Sidebar | Splitter | Editor ── -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition x:Name="SidebarCol" Width="0" MinWidth="0"/>
                <ColumnDefinition x:Name="SplitterCol" Width="0" MinWidth="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Activity Bar -->
            <Border Grid.Column="0" Background="#1E1E1E"
                    BorderBrush="#2D2D30" BorderThickness="0,0,1,0">
                <DockPanel LastChildFill="False">
                    <ToggleButton x:Name="ExplorerBtn"
                                  DockPanel.Dock="Top"
                                  Style="{StaticResource ActivityBarButton}"
                                  Click="ExplorerBtn_Click"
                                  ToolTip="Explorer (Ctrl+B)">
                        <TextBlock Text="&#xE8B7;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="22"
                                   Foreground="{Binding Foreground,
                                       RelativeSource={RelativeSource AncestorType=ToggleButton}}"/>
                    </ToggleButton>
                    <ToggleButton x:Name="SettingsBtn"
                                  DockPanel.Dock="Bottom"
                                  Style="{StaticResource ActivityBarButton}"
                                  Click="SettingsBtn_Click"
                                  ToolTip="設定">
                        <TextBlock Text="&#xE713;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="22"
                                   Foreground="{Binding Foreground,
                                       RelativeSource={RelativeSource AncestorType=ToggleButton}}"/>
                    </ToggleButton>
                </DockPanel>
            </Border>

            <!-- Sidebar: Explorer -->
            <Grid x:Name="ExplorerPanel" Grid.Column="1" Background="#252526"
                  ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- "EXPLORER" header -->
                <Border Grid.Row="0" Padding="12,0,4,0">
                    <TextBlock Text="EXPLORER"
                               FontSize="11" FontWeight="Bold"
                               Foreground="#BBBBBB"
                               FontFamily="Cascadia Code, Consolas"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Folder name -->
                <Border Grid.Row="1" Background="#1E1E1E" Padding="8,5,8,5">
                    <TextBlock x:Name="FolderNameLabel"
                               Text="フォルダーが開かれていません"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#CCCCCC"
                               FontFamily="Cascadia Code, Consolas"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- File TreeView -->
                <TreeView x:Name="FileTree" Grid.Row="2"
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="#CCCCCC"
                          FontFamily="Cascadia Code, Consolas"
                          FontSize="13"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          SelectedItemChanged="FileTree_SelectedItemChanged"/>
            </Grid>

            <!-- Sidebar: Settings -->
            <Grid x:Name="SettingsPanel" Grid.Column="1" Background="#252526"
                  ClipToBounds="True" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="12,0,4,0">
                    <TextBlock Text="設定"
                               FontSize="11" FontWeight="Bold"
                               Foreground="#BBBBBB"
                               FontFamily="Cascadia Code, Consolas"
                               VerticalAlignment="Center"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12,12,12,12">

                        <TextBlock Text="タブの位置"
                                   FontSize="11" FontWeight="SemiBold"
                                   Foreground="#888888"
                                   FontFamily="Cascadia Code, Consolas"
                                   Margin="0,0,0,6"/>
                        <RadioButton x:Name="TabPositionTop"
                                     Content="上 (Top)"
                                     Tag="Top"
                                     GroupName="TabPosition"
                                     Style="{StaticResource SettingRadioButton}"
                                     Checked="TabPosition_Checked"/>
                        <RadioButton x:Name="TabPositionBottom"
                                     Content="下 (Bottom)"
                                     Tag="Bottom"
                                     GroupName="TabPosition"
                                     Style="{StaticResource SettingRadioButton}"
                                     Checked="TabPosition_Checked"/>
                        <RadioButton x:Name="TabPositionLeft"
                                     Content="左 (Left)"
                                     Tag="Left"
                                     GroupName="TabPosition"
                                     Style="{StaticResource SettingRadioButton}"
                                     Checked="TabPosition_Checked"/>
                        <RadioButton x:Name="TabPositionRight"
                                     Content="右 (Right)"
                                     Tag="Right"
                                     GroupName="TabPosition"
                                     Style="{StaticResource SettingRadioButton}"
                                     Checked="TabPosition_Checked"/>

                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- Resizable splitter -->
            <GridSplitter Grid.Column="2"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#252526"
                          BorderBrush="#3A3D46"
                          BorderThickness="0,0,1,0"/>

            <!-- Editor area -->
            <TabControl x:Name="TabCtrl" Grid.Column="3"
                        Background="#282A36" BorderThickness="0"
                        SelectionChanged="TabCtrl_SelectionChanged">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,4"/>
                        <Setter Property="FontFamily" Value="Cascadia Code, Consolas"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border"
                                            Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            BorderThickness="0">
                                        <ContentPresenter ContentSource="Header"
                                                          TextBlock.Foreground="{TemplateBinding Foreground}"
                                                          TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                                          TextBlock.FontSize="{TemplateBinding FontSize}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#282A36"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.ItemContainerStyle>
            </TabControl>
        </Grid>

    </Grid>
</Window>
